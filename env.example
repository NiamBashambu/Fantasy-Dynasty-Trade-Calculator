# Dynasty Trade Analyzer Environment Variables
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your-super-secret-key-here-change-this-in-production
FLASK_ENV=development

# Database Configuration (Railway/Render will provide this)
DATABASE_URL=postgresql://username:password@host:port/database

# Alternative database config (if not using DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dynasty_trade_analyzer
DB_USER=postgres
DB_PASSWORD=your-db-password

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_or_pk_live_your_publishable_key
STRIPE_SECRET_KEY=sk_test_or_sk_live_your_secret_key
STRIPE_ENDPOINT_SECRET=whsec_your_webhook_endpoint_secret

# Optional: Deployment Platform
RAILWAY_ENVIRONMENT=production
NETLIFY_ENV=production
